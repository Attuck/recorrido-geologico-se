<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eniacs_team.rutamurcielago.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <include
            android:id="@+id/include"
            layout="@layout/content_main" />

    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/ic_layer1_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="top|end"
        app:backgroundTint="@color/blanco"
        app:fab_icon="@drawable/ic_info_outline_black_24dp"
        android:visibility="invisible"
        android:clickable="false"
        android:tint="@color/negro"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fab_size="mini"
        />


   <!-- <android.support.design.widget.FloatingActionButton
        android:id="@+id/ic_layer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_layers"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="16dp"x
        android:layout_marginRight="16dp"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/blanco"
        android:tint="@color/verde"
        app:borderWidth="0dp"
        app:elevation="6dp"
        />-->
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/left_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        fab:fab_addButtonColorNormal="@color/blanco"
        fab:fab_addButtonColorPressed="@color/gris"
        fab:fab_addButtonPlusIconColor="@color/negro"
        app:fab_labelsPosition="left"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/ic_layer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_layers_black_24dp"
            fab:fab_title="Mapa Geológico"
            android:layout_gravity="bottom|end"
            app:fab_colorNormal="@color/blanco"
            app:fab_colorPressed="@color/gris"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_size="mini"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/ic_layer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_layers_black_24dp"
            android:layout_gravity="bottom|end"
            fab:fab_title="Símbolos"
            app:fab_colorNormal="@color/blanco"
            app:fab_colorPressed="@color/gris"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_size="mini"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/ic_center_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_my_location_black_24dp"
            android:layout_gravity="bottom|end"
            app:fab_colorNormal="@color/blanco"
            app:fab_colorPressed="@color/gris"
            fab:fab_title="Centrar Mapa"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_size="mini"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:fab_icon="@mipmap/camera_ic"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_size="mini"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>



</android.support.design.widget.CoordinatorLayout>
